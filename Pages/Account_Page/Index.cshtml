@page
@model SignalAssigment_2.Pages.Account_Page.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:100px" class="h1-title">Index</h1>

<p>
    <a asp-page="Create" class="sec-btn primary-btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Account) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AccountID" class="sec-sub-title">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.AccountID" class="sec-sub-title">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AccountID" class="sec-sub-title">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
